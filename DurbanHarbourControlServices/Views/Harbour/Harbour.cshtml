@model DurbanHarbourControlServices.Models.VesselListModel;
@{
    ViewData["Title"] = "Harbour Control";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="container-fluid col-12">
        <h1>@ViewData["Title"]</h1>
    </div>
</div>
<div class="row section">
    <div class="container col-8">
        <div id="radar">
            <div id="rad"></div>
            @foreach (SharedLib.Models.VesselModel vessel in Model.list)
            {
                <div class="obj tooltip @vessel.Type.ToString()" data-x="@vessel.Lat" data-y="@vessel.Long">
                    <span class="tooltiptext">@vessel.Name</span>
                </div>
            }
        </div>
    </div>
    <div class="container col-4">
    </div>
</div>

@section Scripts{
    <script src="~/js/harbour.js" asp-append-version="true"></script>
}